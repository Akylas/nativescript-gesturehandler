{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "removeComments": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "importHelpers": true,
        "noEmitHelpers": true,
        "noEmitOnError": true,
        "preserveSymlinks": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitUseStrict": true,
        "lib": ["es6", "dom", "es2015.iterable"],
        "baseUrl": ".",
        "paths": {
            "~/*": ["app/*"],
            "nativescript-vue": ["./node_modules/nativescript-akylas-vue"],
            "tns-core-modules": ["./node_modules/@nativescript/core"],
            "tns-core-modules/*": ["./node_modules/@nativescript/core/*"],
            "nativescript-gesturehandler": ["../src"],
            "nativescript-gesturehandler/*": ["../src/*"],
            "*": ["node_modules/*"]
        }
    },
    "include": ["app/**/*", "../src/**/*.ts", "references.d.ts" , "vue-shims.d.ts"],
    "exclude": ["node_modules", "platforms", "**/angular"]
}
